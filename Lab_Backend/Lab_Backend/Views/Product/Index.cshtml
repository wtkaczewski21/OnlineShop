    @model IEnumerable<Lab_Backend.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-right">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create New Product</a>
        </div>
    </div>
    <form class="form-inline" asp-controller="Product" asp-action="Filter">
        <input name="searchString" type="text" class="form-control" placeholder="Search...">
        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th></th>
                    <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">@item.Price</td>
                    <td class="text-center"><a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a></td>
                    
                        <td class="align-middle text-center">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>